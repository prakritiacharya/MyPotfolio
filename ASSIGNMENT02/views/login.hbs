<h1>
  Login
</h1>

{{#if messages}}
    <div class="alert alert-danger">
        Invalid credentials
    </div>
{{else}}
    <div class="alert alert-info">
        Please enter your credentials
    </div>
{{/if}}
<form method="post">
  <fieldset class="form-group">
    <label for="username" class="col-2 control-label">
      Username: *
    </label>
    <input name="username" id="username" required />
  </fieldset>
  <fieldset class="form-group">
    <label for="password" class="col-2 control-label">
      Password: *
    </label>
    <input name="password" id="password" type="password" required />
  </fieldset>
  <fieldset class="form-group">
    <button class="btn btn-info offset-3">
      Login
    </button>
    <hr />
<div class="register-section">
  <span class="register-text">Need an account?</span>
  <a href="/register" title="Register" class="register-btn">Register</a>
</div>
  </fieldset>
</form>