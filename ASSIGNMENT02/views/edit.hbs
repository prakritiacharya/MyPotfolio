<h3 class="title">Edit Expense</h3>

<form action="/edit/{{expense._id}}" method="POST" class="border p-4 rounded bg-light">
  <div class="date">
    <label for="date" class="form-label">Date</label>
    <input type="date" name="date" class="form-control" value="{{expense.date}}" required />
  </div>
  <div class="category">
    <label for="category" class="form-label">Category</label>
    <input type="text" name="category" class="form-control" value="{{expense.category}}" required />
  </div>
  <div class="description">
    <label for="description" class="form-label">Description</label>
    <input type="text" name="description" class="form-control" value="{{expense.description}}" required />
  </div>
  <div class="description">
    <label for="amount" class="form-label">Amount ($)</label>
    <input type="number" name="amount" step="0.01" class="form-control" value="{{expense.amount}}" required />
  </div>
  <button type="submit" class="btn btn-primary">Update Expense</button>
</form>
